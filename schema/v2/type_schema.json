{
  "$id": "https://github.com/netrunnerdb/netrunner-cards-json/blob/master/schema/v2/type_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "allOf": [
      {
        "title": "Type codes must be valid for the side.",
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "side_code": {
                "const": "corp"
              },
              "code": {
                "enum": [
                  "agenda",
                  "asset",
                  "corp_identity",
                  "ice",
                  "operation",
                  "upgrade"
                ]
              }
            }
          },
          {
            "properties": {
              "side_code": {
                "const": "runner"
              },
              "code": {
                "enum": [
                  "event",
                  "hardware",
                  "program",
                  "resource",
                  "runner_identity"
                ]
              }
            }
          }
        ]
      }
    ],
    "properties": {
      "code": {
        "minLength": 1,
        "type": "string"
      },
      "name": {
        "minLength": 1,
        "type": "string"
      },
      "side_code": {
        "type": "string",
        "enum": ["corp", "runner"]
      }
    },
    "required": ["code", "name", "side_code"]
  }
}
