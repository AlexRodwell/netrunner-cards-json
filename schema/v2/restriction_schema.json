{
  "$id": "https://github.com/netrunnerdb/netrunner-cards-json/blob/master/schema/v2/restriction_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
