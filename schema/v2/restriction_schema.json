          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "3": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "restricted": {
      "type": "array",
      "items": {
        "minLength": 1,
        "type": "string"
      }
    },
    "name": {
      "minLength": 1,
      "type": "string"
    },
    "format": {
      "minLength": 1,
      "type": "string"
    },
    "point_limit": {
      "minimum": 1,
      "type": "integer"
    }
  },
  "required": ["id", "name", "date_start", "format"]
