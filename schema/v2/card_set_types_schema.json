{
  "$id": "https://github.com/NetrunnerDB/netrunner-cards-json/blob/master/schema/card_set_types_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "description": "Name transformed to lowercase with _ instead of spaces.",
        "minLength": 1,
        "type": "string"
      },
      "name": {
        "description": "Name of the type of set.",
        "minLength": 1,
        "type": "string"
      },
      "description": {
        "description": "A brief explanation of the type of set.",
        "minLength": 1,
        "type": "string"
      }
    },
    "required": ["id", "name", "description"]
  }
}
